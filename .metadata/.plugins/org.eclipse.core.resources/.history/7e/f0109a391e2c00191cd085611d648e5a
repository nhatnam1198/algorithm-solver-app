
public class FirstComeFirstServe{
	private int processes;
	private int[] arrivalTime;
	private int[] burstTime;
	//constructor
	public FirstComeFirstServe(int []arrivalTime, int []burstTime, int processes) {
		this.arrivalTime = arrivalTime;
		this.burstTime = burstTime;
		this.processes = processes;
	}
	public FirstComeFirstServe() {
		this.arrivalTime = null;
		this.burstTime = null;
		this.processes = 0;
	}
	
	public void display() {
		timThoiGianTrungBinh(arrivalTime, burstTime);
	}
	
	public void timThoiGianTrungBinh(int[] arrivalTime, int[] burstTime) {
		int []watingTime = new int[arrivalTime.length];
		int []turnAroundTime = new int[arrivalTime.length];
		timThoiGianCho(arrivalTime, burstTime, watingTime, turnAroundTime);
	}
	
	public void timThoiGianCho(int[] arrivalTime, int[] burstTime, int[] waitingTime, int[] turnAroundTime) {
		int []thoiGianBatDauPhucVu = new int[arrivalTime.length];
		thoiGianBatDauPhucVu[0] = 0;
		
		//Di tim moc thoi gian bat dau phuc vu cho tien trinh
		for (int i = 0; i < arrivalTime.length-1; i++) {
			thoiGianBatDauPhucVu [i] += burstTime[i];
			System.out.println("Thoi gian phuc vu: " + thoiGianBatDauPhucVu[i]);
		}
		
		//Tim thoi gian cho` cho moi tien trinh
		for (int i = 0; i < arrivalTime.length; i++) {
			waitingTime[i] = thoiGianBatDauPhucVu[i] - arrivalTime[i];
			System.out.println("Thoi gian cho: " + waitingTime[i]);
		}
		
	}
	
	
}
